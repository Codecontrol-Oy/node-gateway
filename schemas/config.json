{
	"id": "https://raw.githubusercontent.com/codecontrol-oy/node-gateway/master/schemas/configSchema.json",
	"title": "node-gateway-config",
	"type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["settings", "routerules"],
	"properties": {
		"port": {
            "type": "integer",
			"description": "Server Listen port"
		},
		"noRouteMatchesErrorMessage": {
			"type": "string",
			"description": "Error message when the gateway call doesn't match any defined route"
		},
		"generalErrorMessage": {
			"type": "string",
			"description": "General error message"
		}
	}
}