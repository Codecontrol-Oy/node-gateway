{
	"id": "https://raw.githubusercontent.com/Codecontrol-Oy/node-gateway/master/schemas/server.json",
	"title": "node-gateway-server",
	"type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["port", "noRouteMatchesErrorMessage", "generalErrorMessage"],
	"properties": {
		"port": {
            "type": "integer",
			"description": "Server Listen port"
		},
		"noRouteMatchesErrorMessage": {
			"type": "string",
			"description": "Error message when the gateway call doesn't match any defined route"
		},
		"generalErrorMessage": {
			"type": "string",
			"description": "General error message"
		},
		"host": {
			"type": "string",
			"description": "Server host"
		},
		"serviceName": {
			"type": "string",
			"description": "Service name"
		}
	}
}